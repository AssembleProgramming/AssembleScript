def fact(i){
    ifWorthy(i == 0){
        return 1;
    }
    return fact(i-1) * i;
}
def fib(i){
    ifWorthy(i == 0 || i == 1){
        return i;
    }
    return fib(i-1)+fib(i-2);
}
